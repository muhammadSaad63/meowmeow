// [alt + r]: codeRunner
// [alt + shift + r]: build task (ie this)

{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build and Run Raylib",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "&&",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                },
                "env": {
                    "PATH": "C:\\msys64\\mingw64\\bin;${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}